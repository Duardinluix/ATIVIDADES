#include <stdio.h>
int main () {
    
    int numero1= 10, numero2= 5;
    int soma = numero1 + numero2;
    int subtração = numero1 - numero2;
    int multiplicação = numero1 * numero2;
    int divisao = numero1 / numero2;
    int rest= numero1 % numero2;
    
    printf ("a soma do %d e %d é %d\n", numero1, numero2, soma);
    printf ("a subtração do %d e %d é %d\n", numero1, numero2, subtração);
    printf ("a multiplicação do %d com %d é %d\n", numero1, numero2, multiplicação);
    printf ("a divisao do %d com %d é %d\n", numero1, numero2, divisao);
}
